                        <td>" + users[i].activity.length + " parties</td>\
						<td>" + users[i].total_hours + "h</td>\
						<td>" + users[i].total_gages + "</td>\
                        <td>" + users[i].total_points + " pts</td>\
                    </tr>"
				}
			})
			.catch(error => {
				console.log(error);
			})
</script>
